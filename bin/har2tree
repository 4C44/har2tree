#!/usr/bin/env python
# -*- coding: utf-8 -*-

import argparse
from har2tree import Har2Tree
import json

if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='Make a tree out of an HAR file.')
    parser.add_argument("-i", "--input", help="Path to the HAR file")
    parser.add_argument("-o", "--output", help="Output file. Can be PDF, JPG, PNG, ...")
    args = parser.parse_args()

    with open(args.input, 'r') as f:
        h2t = Har2Tree(json.load(f))
        h2t.tree(args.output)
